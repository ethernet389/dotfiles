# Aliases for paths
set $sway_dir "~/.config/sway"
set $scripts_dir "$sway_dir/scripts"
set $wallpapers_dir "$sway_dir/wallpapers"

# Keys
set $mod   Mod4
set $left  h
set $down  j
set $up    k
set $right l

set $term     alacritty
set $menu     rofi -show drun -modes "drun"


# Theme and font
include themes/catppuccin-mocha
font pango: AdwaitaMono Nerd Font 10

# Cursor settings
seat * xcursor_theme kasane-teto-cursors 20
# seat * hide_cursor 1000

# Start ydotool daemon
exec_always pgrep -x ydotoold || ydotoold

# Setup wallpaper and binds
output "*" bg "$wallpapers_dir/unmarked_butcher_teto.png" fill
bindsym $mod+b exec "$scripts_dir/control-background.sh $wallpapers_dir/unmarked_butcher_teto.png"
bindsym $mod+Shift+b exec "$scripts_dir/control-background.sh $wallpapers_dir/marked_butcher_teto.png"

# Start battery notificiations
exec_always pgrep -x battery-status- || && "$scripts_dir/battery-status-notify.sh"

# target                 title     bg    text   indicator  border
client.focused           $lavender $base $text  $rosewater $lavender
client.focused_inactive  $overlay0 $base $text  $rosewater $overlay0
client.unfocused         $overlay0 $base $text  $rosewater $overlay0
client.urgent            $peach    $base $peach $overlay0  $peach
client.placeholder       $overlay0 $base $text  $overlay0  $overlay0
client.background        $base


# Input/Output
input type:touchpad {
    dwt              enabled
    tap              enabled
    drag             enabled
    natural_scroll   enabled
    middle_emulation enabled 
}

input type:pointer {
    natural_scroll enabled
}

input type:keyboard {
    xkb_layout   us,ru
    xkb_options  grp:alt_shift_toggle
    xkb_numlock  enabled
    repeat_delay 200
    repeat_rate  25
}

output eDP-1 {
    resolution    1920x1080@144.002Hz
    allow_tearing no
}


# Borders and gaps
gaps inner 5
default_border pixel 2
corner_radius 5 

# Enable XWayland
xwayland enable
for_window [shell="xwayland"] title_format "%title [XWayland]"


# Magic shit
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec hash dbus-update-activation-environment 2>/dev/null && dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK


# Programm bindings
bindsym $mod+Return  exec $term
bindsym $mod+Shift+q kill
bindsym $mod+d       exec $menu
bindsym $mod+Ctrl+f  exec $file_mgr

floating_modifier $mod normal

bindsym $mod+Shift+c reload

bindsym $mod+Shift+e exec swaynag -t warning -m 'Kill me, i am begging you...' -B 'Give the refreshing breath of death' 'swaymsg exit'


# Moving bindings
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up
bindsym $mod+$right focus right

bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right

set $move_step 40

bindsym $mod+Shift+$left  move left $move_step
bindsym $mod+Shift+$down  move down $move_step
bindsym $mod+Shift+$up    move up $move_step
bindsym $mod+Shift+$right move right $move_step

bindsym $mod+Shift+Left  move left $move_step
bindsym $mod+Shift+Down  move down $move_step
bindsym $mod+Shift+Up    move up $move_step
bindsym $mod+Shift+Right move right $move_step


# Workspaces bindings
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10


# Layout bindings
bindsym $mod+g splith
bindsym $mod+v splitv

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+f fullscreen

bindsym $mod+Shift+space floating toggle

bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child


# Scratchpad bindings
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show


# Resizing bindings
set $resize_step 40px

mode "resize" {
    bindsym $left resize shrink width $resize_step
    bindsym $down resize grow height $resize_step
    bindsym $up resize shrink height $resize_step
    bindsym $right resize grow width $resize_step

    bindsym Left resize shrink width $resize_step
    bindsym Down resize grow height $resize_step
    bindsym Up resize shrink height $resize_step
    bindsym Right resize grow width $resize_step

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


# System control bindings
bindsym --locked XF86AudioMute exec "$scripts_dir/set-volume-and-notify.sh toggle-sink"
bindsym --locked XF86AudioLowerVolume exec "$scripts_dir/set-volume-and-notify.sh decrease-sink"
bindsym --locked XF86AudioRaiseVolume exec "$scripts_dir/set-volume-and-notify.sh increase-sink"
bindsym --locked $mod+F2 exec "$scripts_dir/set-volume-and-notify.sh decrease-source"
bindsym --locked $mod+F3 exec "$scripts_dir/set-volume-and-notify.sh increase-source"
bindsym --locked XF86AudioMicMute exec "$scripts_dir/set-volume-and-notify.sh toggle-source"

bindsym --locked XF86MonBrightnessDown exec "$scripts_dir/set-brightness-and-notify.sh decrease"
bindsym --locked XF86MonBrightnessUp exec "$scripts_dir/set-brightness-and-notify.sh increase"
bindsym --locked $mod+F5 exec "$scripts_dir/set-brightness-and-notify.sh toggle"

bindsym $mod+o exec "$scripts_dir/control-player-and-notify.sh stop"
bindsym $mod+p exec "$scripts_dir/control-player-and-notify.sh play-pause"
bindsym $mod+bracketleft exec "$scripts_dir/control-player-and-notify.sh previous"
bindsym $mod+bracketright exec "$scripts_dir/control-player-and-notify.sh next"
bindsym $mod+Alt+bracketleft exec "$scripts_dir/control-player-and-notify.sh decrease-level"
bindsym $mod+Alt+bracketright exec "$scripts_dir/control-player-and-notify.sh increase-level"

# Screenshot tool
bindsym $mod+x exec flameshot gui

# Magnifier tool
bindsym $mod+z exec wooz

# Colorpicker tool
bindsym $mod+c exec hyprpicker --autocopy

# Keyboard display tool
bindsym --locked $mod+m exec "pkill -x wshowkeys > /dev/null || wshowkeys -a bottom -l 60 -F 'monospace 24'"

# Status bar
bar {
  swaybar_command waybar
}
